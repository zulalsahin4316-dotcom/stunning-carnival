();  function addToCart(product, price) {    cart.push({product, price});    updateCart();  }  function updateCart() {    const cartItems = document.getElementById('cart-items');    const cartTotal = document.getElementById('cart-total');    const cartToggle = document.getElementById('cart-toggle');    const checkoutLink = document.getElementById('checkout-link');    cartItems.innerHTML = '';    let total = 0;    cart.forEach((item, index) => {      total += item.price;      const li = document.createElement('li');      li.innerHTML = `${item.product} - ${item.price}₺ <button onclick="removeFromCart(${index})">❌</button>`;      cartItems.appendChild(li);    });    cartTotal.textContent = total + '₺';    cartToggle.textContent = `🛒 Sepetim (${cart.length})`;    checkoutLink.style.display = cart.length > 0 ? 'inline-block' : 'none';  }  function removeFromCart(index) {    cart.splice(index, 1);    updateCart();  }  function clearCart() {    cart = [];    updateCart();  }  document.getElementById('checkout-link').addEventListener('click', function(e) {    e.preventDefault();    const name = document.getElementById('customer-name').value.trim();    const phone = document.getElementById('customer-phone').value.trim();    const address = document.getElementById('customer-address').value.trim();    if (!name || !phone || !address) {      alert("Lütfen ad, telefon ve adres bilgilerinizi girin.");      return;    }    let notes = cart.map(item => `${item.product} (${item.price}₺)`);    const noteText = `Müşteri: ${name}, Telefon: ${phone}, Adres: ${address}, Ürünler: ${notes.join(', ')}`;    // ✅ Shopier yönlendirmesi    window.open(shopierBaseLink + "?note=" + encodeURIComponent(noteText), "_blank");    // ✅ EmailJS sipariş bildirimi    emailjs.send("YOUR_SERVICE_ID", "YOUR_TEMPLATE_ID", {      customer_name: name,      customer_phone: phone,      customer_address: address,      order_items: notes.join(', '),      order_total: document.getElementById('cart-total').textContent    })    .then(function(response) {      alert("Sipariş bilgileri e-posta ile gönderildi ✅");    }, function(error) {      alert("E-posta gönderilemedi ❌: " + JSON.stringify(error));    });  });  document.getElementById('cart-toggle').addEventListener('click', () => {    const cartBox = document.getElementById('cart');    cartBox.style.display = cartBox.style.display === 'block' ? 'none' : 'block';  });</script></body></html>
